<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Shop Management</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>Food Shop Management</h1>
    </header>

    <main>
        <section class="products">
            <h2>Products</h2>
            <div id="product-list">
                <!-- Products will be dynamically added here -->
            </div>
        </section>

        <section class="cart">
            <h2>Your Cart</h2>
            <div id="cart-items">
                <p>No items in the cart.</p>
            </div>
            <div id="cart-total">
                <p>Total: $0.00</p>
            </div>
        </section>
    </main>

    <script src="script.js"></script>
</body>
</html>
